@model IEnumerable<CoverType>  //this comes from the categorycontroller
@{
    ViewData["Title"] = "Index";
}

@*<h1>Index Category</h1>*@

<!--yeta bata <partial name=_NOtification/> move vayera _layout.cs ma xa because it can be used by all the 
    pages now onward....(Note that: we have used the toaster alert)
-->
<!--this is used to display notification(CRUD) and comes from shared folder->partial view(_Notification)-->
    

<div class="container p-3">
    <div class ="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Covertype List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i>&nbsp; Create New Covertype
            </a>
        </div>
    </div>
    <br />  


<!-- this below table represent the how we are going to display the data in the table --> 
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name

            </th>

            <!--Edit ko lagi-->
            <th>

            </th>
            <!---->
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>    
                <td width="50%">    
                    @obj.Name
                </td>                

                <!--this below is used for edit-->
                <td>
                    <div class="w-75 btn-group" role="group">

                  <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                  class="btn btn-primary mx-2">
                      <i class="bi bi-pencil-square"></i>Edit
                  </a>   
                  <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                  class="btn btn-danger mx-2">
                      <i class="bi bi-archive-fill"></i>Delete
                  </a>      
                    </div>
                </td>
                <!---->
            </tr>
        }
    </tbody>
    

</table>
</div>

