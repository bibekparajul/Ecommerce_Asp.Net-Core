@model IEnumerable<Product>

<div class = "row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid green; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" height="300px" width="250px"/>
                        <div class=" card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary"><b>@product.Title</b></p>
                                <p class="card-title text-info text-primary">@product.AuthorName</p>

                            </div>
                            <div class="pl-1">
                                <p>ListPrice: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>        
                            <div class="pl-1">
                                <p>Discount offer: <b>$@product.Price100.ToString("0.00")</b></p>
                            </div>

                        </div>

                    </div>
                    <div >
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId = "@product.Id">
                        Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
